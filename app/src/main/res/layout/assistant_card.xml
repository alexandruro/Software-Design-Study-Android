<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/assistant_card1_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_margin="16dp"
            android:text="@string/assistant_card1_subtitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subtitle"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:src="@drawable/water" />

        <View
            android:id="@+id/divider"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@id/image"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="#828282" />

        <ImageView
            android:id="@+id/positive_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/subtitle"
            android:layout_below="@+id/divider"
            android:src="@drawable/ic_arrow_forward" />

        <Button
            android:id="@+id/positive_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/divider"
            android:layout_toEndOf="@+id/positive_icon"
            android:text="Add to shopping list" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@+id/divider"
            android:layout_marginStart="120dp"
            android:layout_toEndOf="@+id/positive_button"
            android:src="@drawable/ic_clear_black_24dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>